# Task 3: List Exercise

# 1) إنشاء القائمة
fruits = ["Apple", "Banana", "Orange", "Grapes", "Pineapple"]


print("Original list:", fruits)


print("First fruit:", fruits[0])
print("Last fruit:", fruits[-1])


fruits[1] = "Mango"
print("After changing second item:", fruits)


fruits.insert(2, "Watermelon")
print("After inserting Watermelon:", fruits)


user_fruit = input("Enter a fruit to check: ")
if user_fruit in fruits:
    print(f"{user_fruit} is in the list.")
else:
    print(f"{user_fruit} is NOT in the list.")


fruits.sort()
print("Sorted list:", fruits)
