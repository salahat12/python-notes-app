fruit_prices = {
    "apple": 2.5,
    "banana": 1.0,
    "orange": 1.5,
    "mango": 3.0,
    "watermelon": 5.0
}

fruit_name = input("Enter a fruit name: ").lower()

if fruit_name in fruit_prices:
    print(f"The price of {fruit_name} is ${fruit_prices[fruit_name]}")
else:
    print("Sorry, this fruit is not available.")
